    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
      * {
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        scroll-behavior: smooth;
      }
      header {
        background: #07ad90;
        width: 100%;
        
        z-index: 999;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 200px;
      }
      .logo {
        text-decoration: none;
        color: #fff;
        text-transform: uppercase;
        font-weight: 700;
        font-size: 1.8em;
      }

      .navigation a {
        text-decoration: none;
        color: #fff;
        font-size: 1.8em;
        font-weight: 500;
        padding-left: 30px;
        transition: 1.5s ease;
      }
      .navigation a:hover {
        font-size: 2.2em;
      }
      .navigation a:hover {
        color: #07ad90;
      }
      section {
        padding: 100px 200px;
      }
      .main {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        /* alighn items can't be done before display flex */
        align-items: center;
      
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        justify-content: center;
      }
      .main h2 {
        color: white;
        font-size: 1.4em;
        font-weight: 500;
      }
      .main h2 span {
        display: inline-block;
        margin-top: 10px;
        color: #fff;
        font-size: 3em;
        font-weight: 600;
      }
      .main h3 {
        color: white;
        font-size: 2em;
        font-weight: 700;
        letter-spacing: 1px;
        margin-top: 10px;
        margin-bottom: 20px;
      }
      .main-btn {
        text-decoration: none;
        color: #fff;
        background: #07ad90;
        font-size: 1.1em;
        font-weight: 600;
        display: inline-block;
        padding: 0.9375em 2.1875em;
        letter-spacing: 1px;
        border-radius: 15px;
        margin-bottom: 40px;
        transition: 0.7s ease;
      }
      .main-btn:hover {
        background-color: #07ad90;
        transform: scale(1.1);
      }
      .social-icons a {
        color: white;
        font-size: 1.7em;
        padding-right: 30px;
        transition: 0.7s ease;
      }
      .social-icons a:hover {
        font-size: 2.2em;
      }
      .title {
        display: flex;
        justify-content: center;
        color: #07ad90;
        font-size: 2.2em;
        font-weight: 800;
        margin-bottom: 30px;
      }
      .content {
        display: flex;
        justify-content: center;
        flex-direction: row;
        flex-wrap: wrap;
      }
      .main h1 {
        color: #fff;
        margin-right: 10px;
      }

      .card {
        background-color: #fff;
        width: 21.25em;
        box-shadow: 0 5px 25px rgba(1, 1, 1, 0.15);
        border-radius: 10px;
        padding: 25px;
        margin: 15px;
        transition: 0.7s ease;
      }
      .card:hover {
        transform: scale(1.1);
      }
      .icon {
        color: #3a6cf4;
        font-size: 8em;
        text-align: center;
      }
      .info {
        text-align: center;
      }
      .info h3 {
        color: #07ad90;
        font-size: 1.2em;
        font-weight: 700;
        margin: 10px;
      }
      .projects {
        background-color: #000016;
      }
      .projects .content {
        margin-top: 30px;
      }
      .project-card {
        background: white;
        border: 1px solid white;
        min-height: 14em;
        width: 23em;
        overflow: hidden;
        border-radius: 10px;
        margin: 20px;
        transition: 0.7s ease;
      }
      .project-card:hover {
        transform: scale(1.1);
      }
      .project-img img {
        width: 100%;
      }
      .userpass {
        display: flex;
        flex-direction: row;
      }
      .project-card:hover .project-img {
        opacity: 0.9;
      }
      .project-info {
        padding: 1em;
      }
      .project-category {
        font-size: 0.8em;
        color: black;
      }
      .project-title {
        display: flex;
        justify-content: space-between;
        text-transform: uppercase;
        font-weight: 800;
        margin-top: 10px;
      }
      .more-details {
        text-decoration: none;
        color: #07ad90;
      }
      .more-details:hover {
        color: #07ad90;
      }
      .contact .icon {
        font-size: 4.5em;
      }
      .contact .info h3 {
        color: black;
      }
      .contact .info p {
        font-size: 1.2em;
      }
      .footer {
        background-color: #07ad90;
        color: white;
        padding: 2em;
        display: flex;
        justify-content: space-between;
      }
      .footer-title {
        font-size: 1.3em;
        font-weight: 600;
      }
      .footer-title span {
        color: #07ad90;
      }
      .footer .social-icons a {
        padding: 0 12px 0 0;
      }
      input {
        width: 200px;
        padding: 10px;
        border-color: #07ad90;

        border-radius: 10px;
      }
      @media (max-width: 1023px) {
        header {
          padding: 10px 10px;
        }
        .navigation a {
          padding-left: 5px;
          font-size: 1.4em;
          font-weight: 400;
        }
        .title {
          font-size: 1.8em;
        }
        section {
          padding: 80px 20px;
        }
        .main-content h2 {
          font-size: 1em;
        }
        .main-content h3 {
          font-size: 1.6em;
        }
        .content {
          flex-direction: column;
          align-items: center;
        }
        @media (max-width: 641px) {
          body {
            font-size: 12px;
          }
          .main-content h2 {
            font-size: 0.8em;
          }
          .main-content h3 {
            font-size: 1.4em;
          }
        }
        @media (max-width: 300px) {
          body {
            font-size: 10px;
          }
        }
      }
    </style>
  </head>

