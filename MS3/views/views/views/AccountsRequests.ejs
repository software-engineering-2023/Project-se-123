<head>
  <title>Bank Account Open Requests</title>
  <style>
    body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 20px;
}

h1 {
  text-align: center;
  color: #07ad90;
}

.requests-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.request-card {
  background-color: #f0f0f0;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 20px;
  margin: 10px;
  width: 300px;
}

h2 {
  margin-top: 0;
}

.accept-btn,
.reject-btn {
  background-color: #07ad90;
  color: #fff;
  border: none;
  padding: 10px;
  margin-top: 10px;
  cursor: pointer;
  width: 100%;
  transition: background-color 0.3s;
}

.accept-btn:hover,
.reject-btn:hover {
  background-color: #07ad90;
}

  </style>
</head>
<body>
  <h1>Bank Account Open Requests</h1>

  <div class="requests-container">
    <div class="request-card">
      <h2>John Doe</h2>
      <p>Account Type: Savings</p>
      <p>Requested Amount: $5000</p>
      <button class="accept-btn">Accept</button>
      <button class="reject-btn">Reject</button>
    </div>
    
    <div class="request-card">
      <h2>Jane Smith</h2>
      <p>Account Type: Current</p>
      <p>Requested Amount: $10000</p>
      <button class="accept-btn">Accept</button>
      <button class="reject-btn">Reject</button>
    </div>

    <!-- Add more request cards as needed -->
  </div>

  <script src="script.js"></script>
</body>
</html>